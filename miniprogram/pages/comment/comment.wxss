/* pages/comment/comment.wxss */
.detail-bg{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1; 
}

.detail-info{
  display: flex;
  position: absolute;
  align-items: center;
  width: 100%;
  height: 400rpx;
  top: 0;
  left: 0;
}
.detail-img{
  height: 90%;
  width: 280rpx;
  margin: 10px;
  margin-right: 36rpx;
}

.detail{
  flex: 1;
  padding: 10px;
}

.detail view{
  color: #fff;
  font-size: 32rpx;
  padding-bottom: 10rpx;
}

.detail .detail-title{
  font-size: 34rpx;
  font-weight: bold;
  padding-bottom: 14rpx;
}

.detail .detail-rate{
  color: #f3cf2a;
}

.detail-summary{
  padding: 30rpx 22rpx;
}

.detail-comment{
  padding: 16rpx 16rpx;
}